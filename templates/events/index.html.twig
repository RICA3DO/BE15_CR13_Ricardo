{% extends 'base.html.twig' %}

{% block title %}Welcome to Big Events{% endblock %}

{% block body %}

<section id="events">
    <div class="container mt-3 mb-3">
        <h2 class="text-center m-5"> Welcome to our site, <br> we do hope that you can find <br> something that is going to be interesting to you.</h2>
        <hr>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-5">
            {% for event in events %}
            <div class="col">
                <div class="card h-100 mb-5 ">
                <img src="../pictures/{{event.image}}" class="card-img-top style" alt="{{ event.name }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ event.name }}</h5>
                        <p class="card-text">{{event.description}}</p>
                        <div class="m-3">
                            <p class="card-text m-0">Date: {{event.dateTime | date('d/m/YÂ ')}}</p>
                            <p class="card-text m-0">Time: {{event.dateTime | date('H:i')}} </p>
                        </div>                       
                        <div>
                            <a href="/details/{{event.id}}" class="btn btn-dark">Details</a>
                            <a href="/edit/{{event.id}}" class="btn btn-dark">Edit</a>
                            <a href="/delete/{{event.id}}" onclick="return confirm('Confirm to delete')" class="btn btn-dark">Delete</a>
                        </div>
                    </div>
                </div>
                </div>
            {% endfor %}
    </div>
</section>
{% endblock %}